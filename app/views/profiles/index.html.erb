<h1>Manage Applicants</h1><br>
<% if current_user.profiles.any? %>
  <%= link_to "Create new Applicant", new_profile_path %>
<% end %>
<br>

<table class="table table-hover shadow p-3 mb-5 bg-white rounded">
  <tr>
    <th>S/N</th>
    <th>Applicant</th>
    <th>Verified Companies</th>
    <th>Partner Status</th>
    <th>Action</th>
  </tr>

  <% if current_user.admin? %>
    <% if current_user.profiles.any? %>
      <% @profiles.each do |profile| %>
      <tr>
        <% if profile.id != 1 %>
          <td><%= profile.id - 1 %>.</td>
          <td><%= link_to "#{profile.first_name}", profile_path(profile) %></td>
          <td>
          <% verified_count = 0 %>
          <% profile.company_profile.each do |company| %>
            <% if company.status == "verified" %>
                <% verified_count += 1 %>
            <% end %>
          <% end %>
          <%= verified_count %> / <%= profile.company_profile.count %>
          </td>
          <td>Pending</td>
          <td><%= link_to "Edit", edit_profile_path(profile) %></td>
        <% end %>
        <br>
      </tr>
      <% end %>

    <% else %>
      <tr>
        <td colspan="5" style="text-align: center; font-size: 25px">
        <p><strong>No profiles yet, please create a <%= link_to "profile", new_profile_path %>.</strong></p>
        </td>
      </tr>
    <% end %>
  <% else %>
      <% if current_user.profiles.any? %>
      <% current_user.profiles.each do |profile| %>
      <tr>
        <% if profile.id != 1 %>
          <td><%= profile.id - 1 %>.</td>
          <td><%= link_to "#{profile.first_name}", profile_path(profile) %></td>
          <td>
          <% verified_count = 0 %>
          <% profile.company_profile.each do |company| %>
            <% if company.status == "verified" %>
                <% verified_count += 1 %>
            <% end %>
          <% end %>
          <%= verified_count %> / <%= profile.company_profile.count %>
          </td>
          <td>Pending</td>
          <td><%= link_to "Edit", edit_profile_path(profile), :class => "btn btn-primary" %></td>
        <% end %>
        <br>
      </tr>
      <% end %>

    <% else %>
      <tr>
        <td colspan="5" style="text-align: center; font-size: 25px">
        <p><strong>No profiles yet, please create a <%= link_to "profile", new_profile_path %>.</strong></p>
        </td>
      </tr>
    <% end %>
  <% end %>


  <br>
</table>
