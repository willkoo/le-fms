<body>
    <section class="position-relative py-4 py-xl-3">
        <div class="container">
            <div class="row d-flex justify-content-center" style="margin: 49px;padding: 0px;">
                <div class="col-md-6 col-xl-4" style="width: 574px;">
                    <div class="card mb-5">
                        <div class="card-body d-flex flex-column align-items-center ps-lg-3 pe-lg-3 pt-lg-3 pb-lg-3 ms-lg-1" style="width: 531px;padding: 16px;margin: 16px;height: 450px;">
                            <div class="bs-icon-xl bs-icon-circle bs-icon-primary bs-icon my-4"><svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 16 16" class="bi bi-person">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"></path>
                                </svg></div>
                            <form class="text-center" method="post">
                            <h5>Welcome to Le-FMS</h5>
                            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                <div class="mb-3">
                                <%= f.input :email,
                                required: false,
                                autofocus: true,
                                input_html: { autocomplete: "email" } %></div>
                                <div class="mb-3">
                                <%= f.input :password,
                                required: false,
                                input_html: { autocomplete: "current-password" } %></div>
                                <div class="mb-3"><button class="btn btn-dark d-block w-100" type="submit" style="border-radius:0.25rem;">Login</button <%= f.button :submit, "Log in" %> </div>
                                 <%= render "devise/shared/links" %>
                                <% end %>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
